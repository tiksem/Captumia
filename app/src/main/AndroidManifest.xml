<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.captumia" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".CaptumiaApplication"
        android:theme="@style/AppTheme" >
        <activity android:name=".ui.content.MainMenuActivity"
                  android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.forms.BookServiceActivity"
                  android:screenOrientation="portrait"
                  android:theme="@style/ActionBarActivityTheme"
            >
        </activity>

        <activity android:name=".ui.forms.LoginActivity"
                  android:label="@string/login"
                  android:screenOrientation="portrait"
                  android:theme="@style/ActionBarActivityTheme"
            >
        </activity>

        <activity android:name=".ui.forms.BusinessRegisterActivity"
                  android:label="@string/business_registration"
                  android:screenOrientation="portrait"
                  android:theme="@style/ActionBarActivityTheme"
            >
        </activity>

        <activity android:name=".ui.forms.WriteReviewActivity"
                  android:label="@string/write_a_review"
                  android:screenOrientation="portrait"
                  android:theme="@style/ActionBarActivityTheme"
            >
        </activity>

        <activity android:name=".ui.forms.AddPostActivity"
                  android:label="@string/add_service"
                  android:screenOrientation="portrait"
                  android:theme="@style/ActionBarActivityTheme"
            >
        </activity>

        <activity android:name="com.utilsframework.android.web.WebViewActivity"
                  android:label="@string/add_service"
                  android:screenOrientation="portrait"
                  android:theme="@style/ActionBarActivityTheme"
            >
        </activity>
    </application>

</manifest>
